# Frontend Dockerfile for development
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY tsconfig*.json ./
COPY vite.config.ts ./
COPY tailwind.config.js ./
COPY postcss.config.js ./

# Install dependencies
RUN npm install

# Ensure public/ directory exists in the image
RUN mkdir -p public/

# Copy source code
COPY src/ ./src/
COPY index.html ./

# Expose port
EXPOSE 3000

# Start development server
CMD ["npm", "run", "dev"]